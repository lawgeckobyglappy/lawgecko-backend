{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@config": ["src/config"],
      "@middlewares": ["src/shared/middlewares"],
      "@shared": ["src/shared"],
      "@types": ["src/shared/types"],
      "@utils": ["src/shared/utils"]
    }
  },
  "files": ["src/global.d.ts"],
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
